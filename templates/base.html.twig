<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Blog Symfony !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css') }}">
        {% endblock %}
    </head>

    {% if is_granted('ROLE_ADMIN') %}

        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container navbar-nav">
                <a class="navbar-brand">
                    Admin
                </a>
                <div class="navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="">
                                Gestion des évenements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_user_index') }}">
                                Gestion des utilisateurs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">
                                Gestion des lieux
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    {% endif %}

    <nav class="navbar navbar-expand-md navbar-dark bg-secondary">
        <div class="container navbar-nav">
            <a class="navbar-brand" href="{{ path('app_index_index') }}">
                Home
            </a>
            <div class="navbar-brand">
                <ul class="navbar-nav">

                    {% if app.user is null %}

                        {# app.user : l'utilisateur connecté #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_security_register') }}">
                                Inscription
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="{{ path('app_security_login') }}">
                                Connexion
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_security_register', {id: app.user.id} ) }}">
                                {{ app.user.pseudo }} - Profil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_security_logout') }}">
                                Déconnexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_place_addplace') }}">
                                Ajouter un lieu
                            </a>
                        </li>

                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
    <div class="container">

        {# affichage des messages flash #}
        {% for type, flashes in app.session.flashBag.all %}

            {# Pour la class alert-danger du bootstrap, on change error par danger. #}
            {% if type == 'error' %}
                {% set type = 'danger' %}
            {% endif %}

            {% for message in flashes %}
                <div class="alert alert-{{ type }}">
                    {{ message|raw }}
                </div>
            {% endfor %}

        {% endfor %}

        {% block body %}
            {% block jsMap %}{% endblock %}
            {% block map %}{% endblock %}
        {% endblock %}
    </div>

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>