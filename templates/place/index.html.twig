{% extends 'base.html.twig' %}

{% block body %}
    {# TODO faire l'iframe de la carte avec pictos #}

    <div class="container">
        <div class="row mt-5">
            <h1>{{ place.name }}</h1>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>
                    <p>Adresse : <span style="color: #CD3C30;">{{ place.address }} - {{ place.zipCode }} - {{ place.town }}</span></p>
                </div>
                <div>
                    <p>Téléphone : <span style="color: #CD3C30;">{{ place.phone }}</span></p>
                </div>
                <div>
                    <p>Email de l'établissement : <span style="color: #CD3C30;">{{ place.email }}</span></p>
                </div>
                <div>
                    <p>Description : </p>
                    <p>{{ place.description|nl2br }}</p>
                </div>
            </div>
            <div class="col-md-6">
                <div style="background-color: #d0d0d0; width: 100%; height: 100%;">

                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
        </div>
        <form method="POST">
            <div class="container mt-5">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Déposer un commentaire</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Valider</button>
            </div>
        </form>
    </div>
    {{ form_start(form) }}
    {{ form_row(form.content) }}
    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
    </div>
    {{ form_end(form) }}

    <div>
        {% for comment in comments %}
            <p>Par {{ comment.author }} le <em>{{ comment.publicationDate|date('d/m/Y H:i') }}</em> :</p>
            <p>{{ comment.content|nl2br }}</p>
            <hr>
        {% endfor %}
    </div>


{% endblock %}
