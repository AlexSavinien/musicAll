{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
          integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
          crossorigin=""/>
{% endblock %}

{% block body %}
    {# TODO faire l'iframe de la carte avec pictos #}

    <div class="container">
        <div class="row mt-5">
            <h1>{{ place.name }}</h1>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>
                    <p>Adresse : <span style="color: #CD3C30;">{{ place.address }} - {{ place.zipCode }} - {{ place.town }}</span></p>
                </div>
                <div>
                    <p>Téléphone : <span style="color: #CD3C30;">{{ place.phone }}</span></p>
                </div>
                <div>
                    <p>Email de l'établissement : <span style="color: #CD3C30;">{{ place.email }}</span></p>
                </div>
                <div>
                    <p>Description : </p>
                    <p>{{ place.description|nl2br }}</p>
                </div>
            </div>
            <div class="col-md-6">
                <div data-lat="{{ place.lat }}" data-lon="{{ place.lon }}" id="addMapId" style="background-color: #d0d0d0; width: 100%; height: 100%;"></div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
            <div class="col-md-3">
                <div style="background-color: #d0d0d0; width: 100%; height: 150px;"></div>
            </div>
        </div>
    {{ form_start(form) }}
    {{ form_row(form.content) }}
    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
    </div>
    {{ form_end(form) }}

    <div>
        {% for comment in comments %}
            <p>Par {{ comment.author }} le <em>{{ comment.publicationDate|date('d/m/Y H:i') }}</em> :</p>
            <p>{{ comment.content|nl2br }}</p>
            <hr>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
            integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
            crossorigin=""></script>
    <script src="{{ asset('js/eventMap.js') }}"></script>
{% endblock %}
